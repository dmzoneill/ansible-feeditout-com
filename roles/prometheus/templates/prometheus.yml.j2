{% if prometheus_alertmanager_enabled %}
alerting:
  alertmanagers:
    - scheme: https
      tls_config:
        {% if prometheus_alertmanager_skip_verify|default(true) %}
        insecure_skip_verify: true
        {% endif %}
      static_configs:
        - targets:
{% for target in prometheus_alertmanager_targets %}
            - "{{ target }}"
{% endfor %}
{% endif %}

global:
  scrape_interval: 15s
  evaluation_interval: 15s

rule_files:
  - "rules/*.yml"

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node_exporter'
    static_configs:
      - targets: ['localhost:9100']
