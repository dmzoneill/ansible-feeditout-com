FROM ubuntu:22.04

RUN apt update && \
    apt install -y openssh-server curl nmap wget iproute2 bind9-utils && \
    mkdir /var/run/sshd && \
    useradd -ms /bin/bash vpnuser && \
    echo 'vpnuser:vpnpass' | chpasswd && \
    sed -i 's/#PermitRootLogin.*/PermitRootLogin no/' /etc/ssh/sshd_config && \
    echo 'AllowUsers vpnuser' >> /etc/ssh/sshd_config

EXPOSE 22
CMD ["/usr/sbin/sshd", "-D"]
