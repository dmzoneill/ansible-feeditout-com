FROM ubuntu:22.04

# Install OpenVPN
RUN apt-get update && \
    apt-get install -y openvpn iproute2 curl nmap bind9-utils dnsutils && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Create mount point directory
RUN mkdir -p /vpn

# Set working directory
WORKDIR /vpn

# Run OpenVPN with the mounted config file
ENTRYPOINT ["openvpn", "/vpn/rh.ovpn"]
